<Window x:Class="Torpedo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Torpedo"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="600" WindowStartupLocation="CenterScreen" KeyDown="gameCanvas_KeyDown">
    <StackPanel Background="Black">
        <TextBlock Text="Its a text" Background="Wheat" x:Name="textTest1"></TextBlock>
        <TextBlock Text="Coordinates" Background="Bisque" x:Name="textTest2"></TextBlock>
        <Canvas Width="400" Height="400" x:Name="gameCanvas" Background="White" KeyDown="gameCanvas_KeyDown" Focusable="True" Visibility="Visible" MouseLeftButtonDown="ClickOnCanvas" />
        <Button
            Margin="10"
            Width="200"
            Height="30"
            FontSize="20"
            x:Name="buttonConfirm" 
            Click="ConfirmChoosing"
            >Submit</Button>
    </StackPanel>
</Window>
