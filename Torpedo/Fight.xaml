<Window x:Class="Torpedo.Fight"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Torpedo"
        mc:Ignorable="d"
        Title="Fight" SizeToContent="WidthAndHeight">
    <StackPanel Orientation="Vertical">
        <StackPanel Orientation="Horizontal">
            <StackPanel Orientation="Vertical">
                <Label HorizontalAlignment="Center"  Content="First Player"></Label>
                <Border BorderThickness="2" BorderBrush="Black">
                    <Canvas x:Name="canvas1stPlayer" Background="#669cc0" Width="400" Height="400" MouseLeftButtonDown="SecondPlayerPickTile"/>
                </Border>
            </StackPanel>
            <StackPanel>
                <Label HorizontalAlignment="Center" Content="Second Player"></Label>
                <Border BorderThickness="2" BorderBrush="Black">
                    <Canvas  x:Name="canvas2ndPlayer" Background="#4c8cb5" Width="400" Height="400" MouseLeftButtonDown="FirstPlayerPickTile"/>
                </Border>
                
            </StackPanel>
        </StackPanel>
        
    </StackPanel>
</Window>
